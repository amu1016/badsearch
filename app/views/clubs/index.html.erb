<%= render "shared/header" %>

<div class='main'>

  <div class='top-contents'>
    <h1 class='concept'>
      さぁ 羽を追いかけよう
    </h1>
    <%= form_with local: true do |f| %>
    <div class="search-form">
      <div class="search-prefecture">
        <p class="select-text">探したい地域を入力してください</p>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box-top", id:"club-prefecture"}) %>
      </div>
      <%= f.submit "検索する" ,class:"search-btn" %>
    </div>
    <% end %>
  </div>

  <div class='club-contents'>
    <h2 class='club-content-title'>新規サークル一覧</h2>
    <ul class='club-lists'>
      <% @clubs.each do |club| %>
      <li class='list'>
      <%= link_to club_path(club.id), class: "link" do %>
        <div class="club-top">
          <div class='club-info'>
            <div class="created-date">
            <%= club.created_at%>
            </div>
            <h3 class="club-name">
            <%= club.name%>
            </h3>
            <div class="club-place">
              <div class="club-prefecture">
              <%= club.prefecture.name%>
              </div>
              <div class="club-city">
              <%= club.city%>
              </div>
            </div>
          </div>
          <div class="club-image-content">
            <%= image_tag club.image, class: "club-image" if club.image.attached? %>
          </div>
        </div>
        <div class="club-bottom">
          <div class="club-comment">
            <%= club.information %>
          </div>
          <div class='star-btn'>
           <%= image_tag "star.png", class:"star-icon" %>
           <span class='star-count'>0</span>
          </div>
        </div>
      <% end %> 
      </li>
      <% end %>
    </ul>
  </div>
</div>