<div class="modal-wrapper">
  <div class="row">
  <% if current_user.id == @club.user_id %>
    <div class="schedule-form-label">予定編集</div>
    <div class="schedule-form-content">
    <%= link_to club_event_path(@event), method: :delete, class: "link" do %>
        <div class='favorite-btn'>
          <i class="far fa-trash-alt"></i>
        </div>
      <% end%>
      <%= form_with(model: @event, url: club_event_path, remote: true) do |f| %>
        <%= render 'shared/event_error_messages', object: f.object %>

        <%= f.label :place, "　場所　"%>
        <%= f.text_field :place, class:'form-control mb-3', required: true %> 

        <div class="form-inline text-left">
         <%= f.label :start,"開始時刻", {class:'control-label'}%>
         <%= f.datetime_select :start, {default: Date.today + 0.hours + 00.minutes, minute_step: 15}, class: 'form-control' %>
        </div>
         <br>
        <div class="form-inline text-left"> 
         <%= f.label :end,"終了時刻", {class:'control-label'}%>
         <%= f.datetime_select :end, {default: Date.today + 0.hours + 00.minutes, minute_step: 15}, class: 'form-control' %>
        </div>
        <div class="btn-wrap">
        <%= f.submit "更新",   class: "btn btn-primary js-event-create-btn" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="schedule-form-label">活動予定日詳細</div>
    <div class="event-show-detail">
      <table class="event-show-detail-table">
      <tbody>
        <tr>
          <th class="event-show-detail-item">　場所　</th>
          <td class="event-show-detail-value"><%= @event.place %></td>
        </tr>
        <tr>
          <th class="event-show-detail-item">開始時刻</th>
          <td class="event-show-detail-value"><%= l @event.start, format: :short %></td>
        </tr>
        <tr>
          <th class="event-show-detail-item">終了時刻</th>
          <td class="event-show-detail-value"><%= l @event.end, format: :short %></td>
        </tr>
      </tbody>
    </table>
    </div>
  <% end %>
  </div>
</div>

